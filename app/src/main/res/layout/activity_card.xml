<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.uff.ic.darwin.Card"
        android:background="@color/colorPrimary"
android:id="@+id/someThing">

    <ImageView
            android:layout_width="133dp"
            android:layout_height="162dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Name"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameView" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="Course"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="RegistrationNumber"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registrationView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/courseView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Válido até "
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/expireInView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/registrationView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Inscrito"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/isEnrolledView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/expireInView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Saldo RU"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.145" app:layout_constraintLeft_toRightOf="@+id/button2"
            android:layout_marginLeft="7dp"/>
    <TextView
            android:text="Saldo BU"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/isEnrolledView"
            app:layout_constraintLeft_toRightOf="@+id/button3" android:layout_marginLeft="8dp"/>
    <Button
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:clickable="true"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"/>
    <Button
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/button3"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/isEnrolledView" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"/>

    <TextView
            android:text="R$ 0,00"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ruFundsView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/buFundsView"
            app:layout_constraintLeft_toRightOf="@+id/textView10" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.206" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="R$ 0,00"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buFundsView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/isEnrolledView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@+id/textView11"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>

    <Button
        android:id="@+id/Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contatos"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nameView" />

</android.support.constraint.ConstraintLayout>
